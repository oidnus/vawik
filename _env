# Konfiguracja aplikacji Vawik
APP_NAME=Vawik
APP_DESCRIPTION=Nagraj swoje myśli

# Webhook URL dla przyszłych funkcjonalności wysyłania nagrań
WEBHOOK_URL=

# OpenAI Whisper API dla transkrypcji
OPENAI_API_KEY=
TRANSCRIPTION_ENABLED=true
TRANSCRIPTION_LANGUAGE=pl

# Maksymalna liczba nagrań przechowywanych lokalnie
MAX_RECORDINGS=50

# Jakość nagrywania (low, medium, high)
RECORDING_QUALITY=high

# Maksymalny czas nagrywania w sekundach (0 = bez limitu)
MAX_RECORDING_TIME=0

# Automatyczne usuwanie starych nagrań (true/false)
AUTO_DELETE_OLD=false

# Funkcjonalności podczas nagrywania
ENABLE_RESET_BUTTON=true
ENABLE_CANCEL_BUTTON=true

# Automatyczny backup podczas nagrywania (w sekundach)
BACKUP_INTERVAL=5